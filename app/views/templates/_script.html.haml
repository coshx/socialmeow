.script{ng: {controller: 'ScriptCtrl'}}
  %h1 Use this sript
  %p
    Sm=function(){function e(e,t){this.account=e;this.user=t}e.prototype.users=[];e.prototype.get=function(){this.getChunk(0)};e.prototype.recognize=function(e){var t=this;accounts=$(e).find(".Grid-cell");$.each(accounts,function(e,n){id=$(n).find(".js-stream-item").attr("data-item-id");handle=$(n).find(".u-linkComplex-target").text();image=$(n).find("img").attr("src");name=$(n).find(".js-action-profile-name").text();bio=$(n).find(".ProfileCard-bio").text();following=$(n).find(".FollowStatus").text();t.users.push({id:id,handle:handle,image_url:image,name:name,bio:bio,following:following})})};e.prototype.getChunk=function(e){var t=this;if(e!=0){cursorString="cursor="+e+"&"}else{cursorString=""}url="https://twitter.com/"+t.account+"/following/users?"+cursorString+"cursor_index=&cursor_offset=&include_available_features=1&include_entities=0&is_forward=true";request=$.ajax({url:url,dataType:"html"}).always(function(e){data=JSON.parse(e);t.recognize(data.items_html);if(data.has_more_items==true){t.getChunk(data.cursor)}else{$.post("http://127.0.0.1:3000/api/users/"+t.user+"/get_info",{accounts:t.users,account:t.account,type:"following",url:url})}})};return e}();accountData={};getUser=function(e,t){$.each(e,function(e,n){(new Sm(n,t)).get()})};
    %span{ng: {repeat: 'mine in data'}}
      accounts={{mine.mines}};user={{mine.user}};getUser(accounts,user);